{
    "name": "diff-match-patch-ts",
    "version": "1.0.0",
    "description": "Port diff-match-patch to TypeScript.",
    "license": "MIT",
    "main": "dist/lib/index.js",
    "module": "dist/es/index.js",
    "author": {
        "email": "xiaochao.k@gmail.com",
        "name": "nonoroazoro",
        "url": "http://www.alibabagroup.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nonoroazoro/diff-match-patch-ts"
    },
    "scripts": {
        "clean": "rimraf dist/*",
        "cleanCov": "rimraf @coverage",
        "prebuild": "npm run clean && npm run cleanCov",
        "build": "npm run build:es && npm run build:lib && npm run build:prod",
        "build:es": "tsc --project ./tsconfig.es.json",
        "build:lib": "tsc --project ./tsconfig.lib.json",
        "build:prod": "cross-env NODE_ENV=production webpack --config ./scripts/webpack/webpack.config.prod.js",
        "test": "jest --config ./scripts/jest/jest.config.js",
        "test:cov": "npm run cleanCov && npm test -- --coverage"
    },
    "devDependencies": {
        "@types/jest": "^24.0.9",
        "cache-loader": "^2.0.1",
        "cross-env": "^5.2.0",
        "fork-ts-checker-webpack-plugin": "^0.5.2",
        "husky": "^1.3.1",
        "jest": "^24.1.0",
        "lint-staged": "^8.1.4",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.0",
        "ts-loader": "^5.3.3",
        "tslint": "^5.13.0",
        "typescript": "^3.3.3333",
        "webpack": "^4.29.5",
        "webpack-bundle-analyzer": "^3.0.4",
        "webpack-cli": "^3.2.3"
    },
    "lint-staged": {
        "./src/**/*.ts": [
            "tslint",
            "git add"
        ]
    }
}
